<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Grid</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #0F0F0F;
            color: #9A9A9A;
        }
        h1 {
            color: #9A9A9A;
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 25px;
        }
        .grid-item {
            overflow: hidden; /* Ensure images donï¿½t overflow their container */
            position: relative;
        }
        .grid-item a {
            display: block; /* Make the link block-level so it wraps the image */
            position: relative;
        }
        .grid img {
            width: 100%;
            height: auto;
            object-fit: cover;
            transform: scale(1); /* Scale down image size */
            transition: transform 0.3s ease; /* Smooth transition for scaling */
        }
        .grid-item:hover img {
            transform: scale(1); /* Scale image to 100% on hover */
        }
        .caption {
            text-align: center;
            margin-top: 5px;
            font-size: 14px;
            color: #9A9A9A;
        }
    </style>
</head>
<body>
    <h1>It's time to d-d-d-d-duel</h1>
    <div class="grid">
        <% images.forEach(image => { %>
            <div class="grid-item">
                <a href="/images/<%= image.src %>" target="_blank">
                    <img src="/images/<%= image.src %>" alt="<%= image.username %>">
                </a>
                <div class="caption">
                    <div><%= image.timestamp %></div>
                    <div>@<%= image.username %></div>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>
